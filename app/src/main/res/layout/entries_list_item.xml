<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Entry Name: "
        android:id="@+id/entryNameLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Placeholder Entry Name"
        android:id="@+id/entryItemName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/entryNameLabel"
        android:layout_toEndOf="@+id/entryNameLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/entryItemVaultID"
        android:layout_below="@+id/entryNameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Entry Text"
        android:id="@+id/entryItemText"
        android:layout_below="@+id/entryItemVaultID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Created By: "
        android:id="@+id/entryItemCreatedByLabel"
        android:layout_below="@+id/entryItemText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Placeholder Email"
        android:id="@+id/entryItemEmailCreatedBy"
        android:layout_below="@+id/entryItemText"
        android:layout_toRightOf="@+id/entryItemCreatedByLabel"
        android:layout_toEndOf="@+id/entryItemCreatedByLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Last Modified By:"
        android:id="@+id/lastModifiedByTextView"
        android:layout_below="@+id/entryItemCreatedByLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Placeholder Email"
        android:id="@+id/entryItemLastModifiedBy"
        android:layout_below="@+id/entryItemEmailCreatedBy"
        android:layout_toRightOf="@+id/lastModifiedByTextView"
        android:layout_toEndOf="@+id/lastModifiedByTextView" />

</RelativeLayout>